pipeline { 
    agent any
    tools {nodejs "nodejs"}
    options {
        skipStagesAfterUnstable()
    }
    environment{
        ansibleIP = '10.1.7.241'
        ansiblePort = '5000'
    }
    stages {
        stage('Deploy') {
            steps {
                sh 'curl http://$ansibleIP:$ansiblePort/update/frontend'
            }
        }
    }
} 